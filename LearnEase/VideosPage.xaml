<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearnEase.VideosPage"
             Title="Videos">
            <ScrollView>
    <StackLayout>
        <!-- List of YouTube Videos -->
        <CollectionView ItemsSource="{Binding Videos}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Title}" FontSize="Large" FontAttributes="Bold"/>
                        <Label Text="{Binding Description}" FontSize="Medium"/>
                        <!-- Clickable Element to Play Video -->
                        <Button Text="Play Video" Command="{Binding PlayVideoCommand}" CommandParameter="{Binding VideoId}"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
                        </ScrollView>
</ContentPage>
